<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 大字体样式 -->
    <style name="BigFontStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#464645</item>
        <item name="android:typeface">sans</item>
    </style>

    <!-- 标题栏字体样式 -->
    <style name="TitleBarFontStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
    </style>

    <!-- 标题字体加粗样式 -->
    <style name="TitleBoldFontStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#464645</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 正常字体样式 -->
    <style name="NormalFontStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#464645</item>
        <item name="android:typeface">sans</item>
    </style>

    <!-- 状态字体样式 -->
    <style name="StateFontStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
    </style>

    <!-- 正常白色字体样式 -->
    <style name="NormalWhiteFontStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
    </style>

    <!-- 小字体样式 -->
    <style name="SmallFontStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#464645</item>
        <item name="android:typeface">sans</item>
    </style>

    <!-- 操作图标样式 -->
    <style name="OperateIconStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:contentDescription">@string/contentDescription_null</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <!-- 录入条目样式 -->
    <style name="InputItemStyle">
        <item name="android:background">@drawable/shape_white_solid</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
    </style>

    <!-- 录入条目样式 -->
    <style name="InputItemStyle_Low">
        <item name="android:background">@drawable/shape_white_solid</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 状态条目样式 -->
    <style name="StateItemStyle">
        <item name="android:background">@drawable/shape_state_item</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="Login" parent="@style/OpenAccountDefault">
        <item name="ali_sdk_openaccount_attrs_login_register_text_color">@color/appcolor</item>
        <item name="ali_sdk_openaccount_attrs_login_reset_password_text_color">@color/appcolor
        </item>
        <item name="ali_sdk_openaccount_attrs_login_other_plateform_login_text_color">#999999</item>
        <item name="ali_sdk_openaccount_attrs_title_bar_title">
            @string/ali_sdk_openaccount_text_login
        </item>
        <item name="ali_sdk_openaccount_attrs_title_bar_visibility">invisible</item>
        <item name="ali_sdk_openaccount_attrs_login_oauth_plateform">taobao|qq|weibo|weixin|alipay
        </item>
        <item name="ali_sdk_openaccount_attrs_login_oauth_text_text_color">#999999</item>
        <item name="ali_sdk_openaccount_attrs_login_oauth_text_color">#ffffff</item>
        <item name="ali_sdk_openaccount_attrs_next_step_bg">@drawable/shape_appcolor</item>
    </style>

    <style name="Register" parent="@style/OpenAccountDefault">
        <item name="ali_sdk_openaccount_attrs_login_oauth_text_text_color">#999999</item>
        <item name="ali_sdk_openaccount_attrs_login_oauth_text_color">#ffffff</item>
        <item name="ali_sdk_openaccount_attrs_next_step_bg">@drawable/shape_appcolor</item>
    </style>

    <!--主页底部RadioButton的Style-->
    <style name="rb_tab_style">
        <item name="android:textColor">@drawable/selector_rb_tab_text_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="date_picker_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/start</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
