<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:orientation="vertical">

    <include layout="@layout/include_detail_black" />

    <RelativeLayout
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_300"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40">

        <ImageView
            android:id="@+id/device_image_view"
            android:layout_width="@dimen/dp_270"
            android:layout_height="@dimen/dp_300"
            android:layout_centerInParent="true"
            android:background="#71A0F9" />

        <ImageView
            android:id="@+id/switch1"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_150"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/state_twoswitch_1_off" />

        <ImageView
            android:id="@+id/switch2"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_150"
            android:layout_alignParentRight="true"
            android:layout_below="@id/switch1"
            android:scaleType="fitXY"
            android:src="@drawable/state_twoswitch_1_off" />

        <TextView
            android:id="@+id/mSceneContentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_20"
            android:text="@string/no_bind_scene"
            android:textColor="#565353"
            android:textSize="@dimen/sp_10"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mSceneContentText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_20"
            android:text="@string/no_bind_scene"
            android:textColor="#565353"
            android:textSize="@dimen/sp_10"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mSceneContentText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_20"
            android:text="@string/no_bind_scene"
            android:textColor="#565353"
            android:textSize="@dimen/sp_10"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mSceneContentText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_20"
            android:text="@string/no_bind_scene"
            android:textColor="#565353"
            android:textSize="@dimen/sp_10"
            android:visibility="visible" />

    </RelativeLayout>


</LinearLayout>