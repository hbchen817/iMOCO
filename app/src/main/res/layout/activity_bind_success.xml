<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/layout_common_toolbar"/>

    <ImageView
        android:src="@drawable/dialog_ok"
        android:layout_width="@dimen/dp_200"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_height="@dimen/dp_200"/>

    <TextView
        android:text="@string/device_add_success"
        android:layout_marginTop="@dimen/dp_50"
        android:textColor="@color/all_3"
        android:textSize="@dimen/dp_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/current_test_btn"
        android:text="@string/current_test"
        android:textColor="@color/white"
        android:background="@drawable/shape_button"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:paddingVertical="@dimen/dp_15"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/edit_name_btn"
        android:text="@string/edit_device_name"
        android:textColor="@color/white"
        android:background="@drawable/shape_button_grey"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:paddingVertical="@dimen/dp_15"
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_height="wrap_content"/>

</LinearLayout>