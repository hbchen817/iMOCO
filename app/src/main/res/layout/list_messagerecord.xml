<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/messageRecordListRelItem"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" >

	<TextView
		android:id="@+id/messageRecordListLblDay"
		style="@style/NormalFontStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginTop="6dp"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="10dp"
		android:text="Day" />

	<ImageView
		android:id="@+id/messageRecordListImgIcon"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="20dp"
		android:layout_centerVertical="true"
		android:src="@drawable/message_record"
		android:contentDescription="@string/contentDescription_null"/>

	<TextView
		android:id="@+id/messageRecordListLblDescription"
		style="@style/NormalFontStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginTop="6dp"
		android:layout_toRightOf="@+id/messageRecordListImgIcon"
		android:layout_marginLeft="5dp"
		android:text="Description" />

	<Space
		android:layout_width="wrap_content"
		android:layout_height="36dp"
		android:layout_alignParentRight="true"/>

</RelativeLayout>