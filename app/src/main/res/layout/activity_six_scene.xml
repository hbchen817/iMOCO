<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbgcolor"
    android:orientation="vertical">

    <include layout="@layout/include_detail_black" />

    <LinearLayout
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_300"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_40">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/bg_switch_two_state">

            <TextView
                android:id="@+id/mSceneContentText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_40"
                android:paddingBottom="@dimen/dp_20"
                android:text="@string/no_bind_scene"
                android:textColor="#565353"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/mSceneContentText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/dp_40"
                android:paddingTop="@dimen/dp_20"
                android:gravity="center_horizontal"
                android:text="@string/no_bind_scene"
                android:textColor="#565353"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/bg_switch_two_state">

            <TextView
                android:id="@+id/mSceneContentText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_40"
                android:paddingBottom="@dimen/dp_20"
                android:text="@string/no_bind_scene"
                android:textColor="#565353"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/mSceneContentText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/dp_40"
                android:paddingTop="@dimen/dp_20"
                android:gravity="center_horizontal"
                android:text="@string/no_bind_scene"
                android:textColor="#565353"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:background="@drawable/bg_switch_two_state"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mSceneContentText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_40"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/dp_20"
                android:text="@string/no_bind_scene"
                android:textColor="#565353"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/mSceneContentText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingTop="@dimen/dp_20"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/dp_40"
                android:text="@string/no_bind_scene"
                android:textColor="#565353"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/key_status_background"
        android:paddingHorizontal="@dimen/dp_20">

        <TextView
            android:layout_width="0dp"
            android:paddingVertical="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/switch_one_status"
            android:textColor="#565353" />


        <TextView
            android:id="@+id/mKeyStatusText"
            android:paddingVertical="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/twoswitch_state_on"
            android:textColor="#565353" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/key_status_background"
        android:paddingHorizontal="@dimen/dp_20">

        <TextView
            android:layout_width="0dp"
            android:paddingVertical="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/switch_two_status"
            android:textColor="#565353" />


        <TextView
            android:id="@+id/mKeyStatusText1"
            android:paddingVertical="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/twoswitch_state_off"
            android:textColor="#565353" />


    </LinearLayout>


</LinearLayout>