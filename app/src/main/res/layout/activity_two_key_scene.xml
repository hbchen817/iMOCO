<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbgcolor"
    android:orientation="vertical">

    <include layout="@layout/include_detail_black" />

    <RelativeLayout
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/dp_75">


        <ImageView
            android:id="@+id/device_image_view"
            android:layout_width="@dimen/dp_200"
            android:visibility="gone"
            android:layout_height="@dimen/dp_200"
            android:layout_centerInParent="true"
            android:background="#71A0F9" />

        <ImageView
            android:id="@+id/mSwitch1"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_200"
            android:background="@drawable/selector_switch_clicked" />

        <ImageView
            android:id="@+id/mSwitch2"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_200"
            android:layout_toRightOf="@id/mSwitch1"
            android:background="@drawable/selector_switch_clicked" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/key_status_background"
        android:paddingHorizontal="@dimen/dp_20">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="@dimen/dp_20"
            android:text="@string/key_one_status"
            android:textColor="#565353" />


        <TextView
            android:id="@+id/mSceneContentText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_20"
            android:text="@string/no_bind_scene"
            android:textColor="#565353" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/key_status_background"
        android:paddingHorizontal="@dimen/dp_20">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="@dimen/dp_20"
            android:text="@string/key_two_status"
            android:textColor="#565353" />


        <TextView
            android:id="@+id/mSceneContentText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_20"
            android:text="@string/no_bind_scene"
            android:textColor="#565353" />


    </LinearLayout>

</LinearLayout>