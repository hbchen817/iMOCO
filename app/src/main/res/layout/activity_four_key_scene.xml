<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:orientation="vertical">

    <include layout="@layout/include_detail" />

    <RelativeLayout
        android:layout_width="@dimen/dp_180"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_height="@dimen/dp_300">

        <ImageView
            android:id="@+id/device_image_view"
            android:layout_width="@dimen/dp_180"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/dp_300"
            android:background="#71A0F9" />

        <TextView
            android:id="@+id/mSceneContentText"
            android:paddingVertical="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/no_bind_scene"
            android:textColor="#565353" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/mSceneContentText1"
            android:paddingVertical="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="@dimen/sp_10"
            android:text="@string/no_bind_scene"
            android:textColor="#565353" />

        <TextView
            android:id="@+id/mSceneContentText2"
            android:paddingVertical="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_10"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/no_bind_scene"
            android:textColor="#565353" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/mSceneContentText3"
            android:paddingVertical="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="@dimen/sp_10"
            android:text="@string/no_bind_scene"
            android:textColor="#565353" />

    </RelativeLayout>


</LinearLayout>