<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbgcolor"
    android:orientation="vertical"
    tools:context=".view.LocalSceneActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/layout_common_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/shape_white_solid"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/name"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/name_go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="@string/icon_right_arrow"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/sp_30" />

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/name_go"
                        android:gravity="right"
                        android:hint="@string/pls_enter_a_scene_name"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/appbgcolor" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/status_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/oneswitch_state"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/status_go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="@string/icon_right_arrow"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/sp_30" />

                    <TextView
                        android:id="@+id/status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/status_go"
                        android:paddingLeft="@dimen/dp_20"
                        android:text="@string/scene_maintain_startusing"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/appbgcolor" />

                <RelativeLayout
                    android:id="@+id/time_enable_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/time_enable_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/time_to_trigger"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/time_enable_go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="@string/icon_right_arrow"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/sp_30" />

                    <TextView
                        android:id="@+id/time_enable_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/time_enable_go"
                        android:paddingLeft="@dimen/dp_20"
                        android:text="@string/there_are"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/time_enable_divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/appbgcolor" />

                <RelativeLayout
                    android:id="@+id/condition_enable_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/condition_enable_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/condition"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/condition_enable_go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="@string/icon_right_arrow"
                        android:textColor="@color/normal_font_color"
                        android:textSize="@dimen/sp_30" />

                    <TextView
                        android:id="@+id/condition_enable_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/condition_enable_go"
                        android:paddingLeft="@dimen/dp_20"
                        android:text="@string/there_are"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_time_condition_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/shape_white_solid"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_10"
                        android:text="@string/time"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/add_time_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClick"
                        android:padding="10dp"
                        android:text="@string/icon_add_2"
                        android:textColor="@drawable/selector_theme_click"
                        android:textSize="30sp"
                        android:visibility="invisible" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/appbgcolor" />

                <RelativeLayout
                    android:id="@+id/add_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/add_time_condition_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:drawableLeft="@drawable/add_orange"
                        android:drawablePadding="@dimen/dp_5"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingVertical="@dimen/dp_15"
                        android:text="@string/add_time"
                        android:textColor="@drawable/selector_theme_click"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/time_condition_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/scene_mode_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/shape_white_solid"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/scene_mode_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:drawableRight="@drawable/arrow_down"
                        android:drawablePadding="@dimen/dp_5"
                        android:focusable="true"
                        android:paddingVertical="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="@string/satisfy_any_of_the_following_conditions"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/add_condition_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClick"
                        android:padding="10dp"
                        android:text="@string/icon_add_2"
                        android:textColor="@drawable/selector_theme_click"
                        android:textSize="30sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/appbgcolor" />

                <RelativeLayout
                    android:id="@+id/add_condition_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/add_condition_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:drawableLeft="@drawable/add_orange"
                        android:drawablePadding="@dimen/dp_5"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingVertical="@dimen/dp_15"
                        android:text="@string/add_condition"
                        android:textColor="@drawable/selector_theme_click"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/condition_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/shape_white_solid"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_10"
                        android:text="@string/perform_the_following_actions"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/add_action_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="onClick"
                        android:padding="10dp"
                        android:text="@string/icon_add_2"
                        android:textColor="@drawable/selector_theme_click"
                        android:textSize="30sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/appbgcolor" />

                <RelativeLayout
                    android:id="@+id/add_action_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/add_action_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:drawableLeft="@drawable/add_orange"
                        android:drawablePadding="@dimen/dp_5"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingVertical="@dimen/dp_15"
                        android:text="@string/add_action"
                        android:textColor="@drawable/selector_theme_click"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/action_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/del_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/shape_button_red"
                android:visibility="gone">

                <TextView
                    style="@style/NormalWhiteFontStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dp_10"
                    android:text="@string/delete"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>