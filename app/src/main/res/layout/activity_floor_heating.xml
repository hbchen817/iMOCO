<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_detail" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_350">

        <ImageView
            android:id="@+id/device_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_350"
            android:background="#71A0F9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_100"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/sub"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/all_3"
                    android:textSize="@dimen/sp_34"
                    tools:text="24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/centigrade"
                    android:textColor="@color/all_3" />

            </LinearLayout>

            <ImageView
                android:src="@drawable/add"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30" />

        </LinearLayout>


        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_height="wrap_content">
            <TextView
                android:text="温度 "
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/all_3"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/temperature"
                android:text="25"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/all_3"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/centigrade"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/all_3"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="   |  湿度 "
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/all_3"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/humidity"
                android:text="30"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/all_3"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="%"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/all_3"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="   |  "
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/all_3"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="水机"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/all_3"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_1"
        android:background="#B3B3B4" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/fan_speed"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingVertical="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/cloud_timer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/detail_state_timer"
                android:textColor="@color/all_3"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingVertical="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:src="@drawable/cloud_timer" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lock"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingVertical="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/cloud_timer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/key_lock"
                android:textColor="@color/all_3"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>