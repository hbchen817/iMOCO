<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/contentListRelItem"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" >

	<ImageView
		android:id="@+id/contentListImgIcon"
		android:layout_width="26dp"
		android:layout_height="26dp"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="10dp"
		android:src="@drawable/message"
		android:contentDescription="@string/contentDescription_null"/>

	<TextView
		android:id="@+id/contentListLblName"
		style="@style/NormalFontStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginTop="6dp"
		android:layout_toRightOf="@+id/contentListImgIcon"
		android:layout_marginLeft="5dp"
		android:text="@string/sensorstate_protectionalarm" />

	<Space
		android:layout_width="wrap_content"
		android:layout_height="52dp"
		android:layout_alignParentRight="true"/>

</RelativeLayout>