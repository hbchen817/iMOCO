<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choiceProductLl"
    android:background="@color/appbgcolor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_common_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/setTimeRllEveryday"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:background="@color/appbgcolor">

            <View
                android:id="@+id/choiceProductViNull"
                android:background="@color/appbgcolor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
            </View>

            <TextView
                android:id="@+id/choiceProductTypeSwitch"
                android:layout_below="@+id/choiceProductViNull"
                style="@style/NormalFontStyle"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/topic_color1"
                android:text="@string/configproduct_device_type_switch" />

            <TextView
                android:id="@+id/choiceProductTypeSensor"
                style="@style/NormalFontStyle"
                android:layout_below="@+id/choiceProductTypeSwitch"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/appbgcolor"
                android:paddingLeft="@dimen/dp_10"
                android:text="@string/configproduct_device_type_sensor" />

            <TextView
                android:id="@+id/choiceProductTypeGateway"
                style="@style/NormalFontStyle"
                android:layout_below="@+id/choiceProductTypeSensor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/appbgcolor"
                android:paddingLeft="@dimen/dp_10"
                android:text="@string/configproduct_device_type_gateway" />

        </RelativeLayout>

        <GridView
            android:id="@+id/choiceProductGrdProduct"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:verticalSpacing="@dimen/dp_10"
            android:numColumns="2"/>

    </LinearLayout>

</LinearLayout>
