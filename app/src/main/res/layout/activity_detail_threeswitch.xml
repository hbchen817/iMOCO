<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailTwoSwitchLl"
    android:background="@drawable/device_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <include layout="@layout/include_detail" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/deviceListRelItem"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="@dimen/dp_240" >

        <ImageView
            android:id="@+id/detailTwoSwitchImgOperate1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/contentDescription_null"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"
            android:src="@drawable/device_switch_three_left_close" />

        <ImageView
            android:id="@+id/detailTwoSwitchImgOperate2"
            android:contentDescription="@string/contentDescription_null"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/device_switch_three_middle_close" />

        <ImageView
            android:id="@+id/detailTwoSwitchImgOperate3"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/contentDescription_null"
            android:layout_height="wrap_content"
            android:src="@drawable/device_switch_three_right_close" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/detailOneSwitchRLState1"
        android:layout_marginTop="20dp"
        style="@style/StateItemStyle" >

        <ImageView
            android:id="@+id/detailTwoSwitchImgStateIcon1"
            android:src="@drawable/state_icon_switch"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/detailTwoSwitchLblStateName1"
            style="@style/StateFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/detailTwoSwitchImgStateIcon1"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:text="@string/twoswitch_state_1" />

        <TextView
            android:id="@+id/detailTwoSwitchLblStateValue1"
            style="@style/StateFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/twoswitch_state_on" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/detailTwoSwitchRLState2"
        style="@style/StateItemStyle" >

        <ImageView
            android:id="@+id/detailTwoSwitchImgStateIcon2"
            android:src="@drawable/state_icon_switch"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/detailTwoSwitchLblStateName2"
            style="@style/StateFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/detailTwoSwitchImgStateIcon2"
            android:layout_marginLeft="5dp"
            android:text="@string/twoswitch_state_2" />

        <TextView
            android:id="@+id/detailTwoSwitchLblStateValue2"
            style="@style/StateFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/twoswitch_state_on" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/detailTwoSwitchRLState3"
        style="@style/StateItemStyle" >

        <ImageView
            android:id="@+id/detailTwoSwitchImgStateIcon3"
            android:src="@drawable/state_icon_switch"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/detailTwoSwitchLblStateName3"
            style="@style/StateFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/detailTwoSwitchImgStateIcon3"
            android:layout_marginLeft="5dp"
            android:text="@string/twoswitch_state_2" />

        <TextView
            android:id="@+id/detailTwoSwitchLblStateValue3"
            style="@style/StateFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="@string/twoswitch_state_on" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_width="fill_parent">

        <RelativeLayout
            android:id="@+id/detailTwoSwitchRLTimer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_border">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/state_icon_timer" />

            <TextView
                style="@style/StateFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="@string/detail_state_timer" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>