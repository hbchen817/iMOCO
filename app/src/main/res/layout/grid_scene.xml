<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/sceneRelItem"
	android:background="@drawable/shape_frame_item"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/sceneImgIcon"
		android:layout_width="25dp"
		android:layout_height="25dp"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="4dp"
		android:contentDescription="@string/contentDescription_null"
		android:src="@drawable/tab_2_press" />

	<TextView
		android:id="@+id/sceneLblName"
		style="@style/NormalFontStyle"
		android:layout_width="wrap_content"
		android:layout_height="60dp"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/sceneImgIcon"
		android:layout_marginLeft="3dp"
		android:gravity="center_vertical|left"
		android:text="@string/main_scenename" />

</RelativeLayout>